<!DOCTYPE html>
<html lang="en">
  
  <%- include("./partials/head") %>

  <style>.container {padding-right: 20px;padding-left: 20px;}</style>
  
  
<!-- Body Start-->
<body>
  <!-- Header Start -->
  <%- include("./partials/header") %>
  <!-- Header End -->
<!-- Jumbotron -->
<div class="banner">
  <div class="container">
    <div>
        <h1>Bienvenido</h1>
    </div>
  </div>
</div>
<!-- Jumbotron End -->

<!-- Product Section Start -->
<section id="product">
  <div class="container">
   <div class="inner-content">
    <h2>Logueate</h2>

<!-- Login Start -->

    <main class="login">
      <form action="/users/login" method="POST" class="create-form">


        <div class="control-formulario">
            <input type="email" name="email" placeholder="Ingresá tu e-mail" class="control"
                value="<%= locals.oldData ? oldData.email : null %> ">
        </div>
        <% if (locals.errors && errors.email) { %>

        <div class="text-danger">
            <%= errors.email.msg  %>
        </div>

        <% } %>

        <div class="control-formulario passconteiner">
            
            <input type="password" name="password" placeholder="Ingresá tu contraseña" class="control" id="inputP">
            
        
        </div>
        <% if (locals.errors && errors.password) { %>

        <div class="text-danger">
            <%= errors.password.msg  %>
        </div>

        <% } %>
        <div class="form-remember">
          <label class="remember">Recordame </label>
          <input type="checkbox" name="remember" class="rem-check">
        </div>

        <div class="boton-centrado">
            <button type="submit" class="boton-formulario">Ingresá a tu cuenta</button>


        </div>

        <div class="no-user">
            <p>¿No tenés una cuenta? Creala <a href="./register">aquí</a></p>
        </div>

    </form>
    </main>


<!-- Login end -->


  <!-- Container End -->
</section>
<!-- Product Section End -->

<!-- Contact Section -->
<section id="contact" class="contact">
 <div class="container">
  <div class="row">
   <div class="inner-content">
