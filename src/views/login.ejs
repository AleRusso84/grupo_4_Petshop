         <li><a href="#"><i class="fa fa-pinterest-square" aria-hidden="true"></i></a></li>
      </ul>
    </div>
  </div>
  </div>
    </div>
 <!-- start footer -->
   <%- include("./partials/footer") %>
    <!-- end footer -->

</section>
<!-- Contact Section End -->
   
