<!DOCTYPE html>
<html lang="en">
    <!-- Inicio del head -->

    <%- include("./partials/head") %>

    <!-- Fin del head -->
<body class="profile">
    <!-- Inicio del Header -->
    
    <%- include("./partials/header") %>
    
    <!-- Fin del Header -->
    <main>
        <div class="container">
            <section>
                <div class="columns">
                    <div class="column is-6">
                        <figure class="image">
                            <img src="/images/users/<%= user.image || '404.png' %>" alt="">
                        </figure>
                    </div>
                    <div class="column is-6">
                        <h1><%= user.firstName %></h1>
                        <p><%= user.lastName %></p>
                        <p><%= user.email %></p>
                        <a href="/users/edit" class="button is-success">Editar</a>
                        <form class="form is-inline" action="/users/<%= user.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="button is-danger">Borrar</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <%- include('partials/footer') %> 
</body>
</html>