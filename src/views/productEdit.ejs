<body>
    <!-- Inicio del Header -->
    
    <%- include("./partials/header") %>
    
    <!-- Fin del Header -->
    <body class="body222">
        <div class='contenedor'>
            <form class="form3" action="/products/<%=edit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-header">
                    <h2 class='form-title'>E<span class="span2">stas Editando el producto</span></h2>
                </div>
                    
                    <label for='name' class="form-label" >Nombre del producto:</label>
                    <input class='form-input'  type="text" name="name" id="name" placeholder="<%=edit.name %>"><br>
            
                    <label for="price" class="form-label" >Precio del Producto:</label>
                    <input class='form-input' type="number" name="price" id="price" placeholder="<%= edit.price %>"><br>
            
                    <label for="discount" class="form-label" >Descuento:</label>
                    <input class="form-input" type="number" name="discount" id="discount" placeholder="<%= edit.discount %>"><br>
            
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value="">Elegí</option>
                        <option value="in-sale">En oferta</option>
                        <option value="visited">Últimos agregados</option>
                        </select> <br>
                        
                    <label for="image" class="form-label" >Imagen:</label>
                    <input class="form-input" type="file" name="image" id="image"><br>
    
    
                    <label for="description" class="form-label">Descripcion</label>
                    <textarea name="description" id="description" class="form-input"><%= edit.description %></textarea>
            
                    <input type="submit" class="btn-submit" value="Guardar Modificacion del Producto">
                
            </form>