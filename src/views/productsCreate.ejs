    <body class="body222">
        <div class='contenedor'>
            <form class="form3" action="/products" method="POST" enctype="multipart/form-data">
                <div class="form-header">
                    <h2 class='form-title'>F<span class="span2">ormulario de creacion de producto</span></h2>
